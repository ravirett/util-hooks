{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "lib/*": [
        "src/lib/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}